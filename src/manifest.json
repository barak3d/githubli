{
    "manifest_version": 2,
    "name": "githubli",
    "description": "Makes github code reviews less irritating",
    "version": "1.3",

    "permissions": [       
		"*://*.github.com/*"
    ],
    "icons": {
        "16": "githubli-icon.png",
        "48": "githubli-icon.png",
        "128": "githubli-icon.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.github.com/*/files"],
            "css": [],
            "js": ["main.js"],
            "all_frames": true
        }
    ]
}